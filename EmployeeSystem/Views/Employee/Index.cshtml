@using Core.Dto;
@model IEnumerable<Core.Entities.Employee>

@{
    ViewData["Title"] = "Index";
}

@*<h1>Index</h1>*@

<br />
<a asp-action="Create" class="btn btn-primary float-right">Add</a>

<br />
<br />

<h3>UpcomingBirthdays</h3>
<ul class="list-group">

    @foreach (EmployeeUpcomingBirthdaysDto birhtday in ViewBag.upcoming_birthdays)
    {
        if (birhtday.DOB != null)
        {
            if (birhtday.DOB.Value.ToString("dd") == DateTime.Now.ToString("dd"))
            {
                <li class="list-group-item active">@birhtday.Name @birhtday.DOB.Value.ToString("dd-mm-yyyy")</li>
            }
            else
            {
            <li class="list-group-item">@birhtday.Name @birhtday.DOB.Value.ToString("dd-mm-yyyy")</li>
            }

        }
    }
</ul>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StateName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new {  id=item.Id, onclick="return confirm('are you want sure delete this record ?')"})
                </td>
            </tr>
        }
    </tbody>
</table>
